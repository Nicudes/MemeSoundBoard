<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemeSounds.MainPage"  
             Title="FirstPage"
             BackgroundImageSource="memebackground">

    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0">
            <Button BackgroundColor="CornflowerBlue" Text="Anime"/>
            <Button BackgroundColor="CornflowerBlue" Text="Sounds"/>
            <Button BackgroundColor="CornflowerBlue" Text="Random"/>
            <Button BackgroundColor="CornflowerBlue" Text="Latest"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="10">
            <ImageButton Source="AirHorn"
                    Clicked="One_Clicked"/>
            <ImageButton Source="OhNo"
                    Clicked="Two_Clicked"/>
            <ImageButton Source="Nani"
                    Clicked="Three_Clicked"/>
            <ImageButton Source="WinXP"
                    Clicked="Four_Clicked"/>
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <SearchBar Placeholder="Search meme..." 
                       PlaceholderColor="White" 
                       SearchButtonPressed="SearchBar_SearchButtonPressed" 
                       CancelButtonColor="White"  
                       TextColor="White"
                       TextChanged="OnTextChanged"/>
            <ListView x:Name="searchResults"/>
        </StackLayout>
    </StackLayout>
    


</ContentPage>
