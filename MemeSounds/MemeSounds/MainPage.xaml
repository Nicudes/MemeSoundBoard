<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemeSounds.MainPage"  
             Title="FirstPage"
             BackgroundImageSource="memebackground">

    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0">
            <Button BackgroundColor="CornflowerBlue" Text="Anime"/>
            <Button BackgroundColor="CornflowerBlue" Text="Sounds"/>
            <Button BackgroundColor="CornflowerBlue" Text="Random"/>
            <Button BackgroundColor="CornflowerBlue" Text="Latest"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="10">
            <Button x:Name="Button_Round1"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BorderWidth="2"
                    BorderColor="Gray"
                    Text="1"
                    Clicked="One_Clicked"/>
            <Button x:Name="Button_Round2"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BorderWidth="2"
                    BorderColor="Gray"
                    Text="2"
                    Clicked="Two_Clicked"/>
            <Button x:Name="Button_Round3"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BorderWidth="2"
                    BorderColor="Gray"
                    Text="3"
                    Clicked="Three_Clicked"/>
            <Button x:Name="Button_Round4"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BorderWidth="2"
                    BorderColor="Gray"
                    Text="4"
                    Clicked="Four_Clicked"/>
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <SearchBar Placeholder="Search..." PlaceholderColor="White" SearchButtonPressed="SearchBar_SearchButtonPressed" CancelButtonColor="White"  TextColor="White"/>
        </StackLayout>
    </StackLayout>
    


</ContentPage>
